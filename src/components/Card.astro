---
export interface Props {
  header: string
  body: string
}

const { header, body } = Astro.props 
---

<div class="card">
  <div class="card-header">
    <div class="card-title">{header}</div>
  </div>
  <div class="card-body monospace">
    {body}
  </div>
</div>

<style>
  .card {
    background-color: #eeeeee;
    padding: 20px;
    border-radius: 15px;
    box-shadow: 4px 5px 5px 2px rgba(240, 180, 180, 0.2);
  }

  .card-header {
    border-bottom: 1px solid #bababa;
    margin-bottom: 10px;
  }

  .card-title {
    font-size: 1.5rem;
    font-weight: 500;
    margin-bottom: 0.5rem;
  }

  .card-body {
    margin-top: 10px;
  }
</style>